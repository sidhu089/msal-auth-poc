{
  "name": "msal-auth-poc",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "build-lib": "cd package/sessionpersist && npm run build",
    "watch-lib": "cd package/sessionpersist && npm run watch",
    "pack-lib": "npm run build-lib && cd package/sessionpersist && npm pack",
    "link-lib": "npm run pack-lib && cd dist/packages/sessionpersist && npm pack && cd ../../../.. && npm uninstall angular-msal-session-persistence --save && npm install ./dist/packages/sessionpersist/angular-msal-session-persistence-1.0.0.tgz --save"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "workspaces": [
    "package/*",
    "!package/sessionpersist"
  ],
  "packageManager": "npm@10.9.2",
  "dependencies": {
    "@angular/animations": "^19.0.0",
    "@angular/common": "^19.0.0",
    "@angular/compiler": "^19.0.0",
    "@angular/core": "^19.0.0",
    "@angular/forms": "^19.0.0",
    "@angular/platform-browser": "^19.0.0",
    "@angular/platform-browser-dynamic": "^19.0.0",
    "@angular/router": "^19.0.0",
    "@azure/msal-angular": "^3.0.12",
    "@azure/msal-browser": "^3.14.0",
    "@svt_089/angular-msal-session-persistence": "^2.0.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.0.0",
    "@angular/cli": "^19.0.0",
    "@angular/compiler-cli": "^19.0.0",
    "@types/jasmine": "~5.1.0",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.7.2"
  }
}
